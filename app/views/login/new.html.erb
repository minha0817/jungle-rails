<h1>Log in</h1>

<%= form_tag '/login' do |form| %>

    <div class="form-group">
        <%= label_tag :first_name %>
        <%= text_field_tag :first_name %>
    </div>  

    <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email %>
    </div>  

    <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
    </div>  

    <%= submit_tag 'Submit!', class: 'btn btn-primary' %>

<% end %>